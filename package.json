{
  "name": "mcp-registry",
  "version": "0.1.0",
  "description": "A local application that aggregates Model Context Protocol (MCP) servers into a searchable directory with reputation scoring",
  "main": "dist/main/index.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:react\"",
    "dev:electron": "tsc -p tsconfig.electron.json && electron --experimental-modules --experimental-specifier-resolution=node .",
    "dev:react": "vite",
    "frontend-only": "vite --port 3000",
    "backend-only": "tsc -p tsconfig.electron.json && node --experimental-modules --experimental-specifier-resolution=node dist/server/index.js",
    "start-dev": "concurrently \"node server.js\" \"npm run frontend-only\"",
    "integrated": "node server.js",
    "build": "tsc -p tsconfig.electron.json && vite build",
    "test": "jest",
    "lint": "eslint src --ext ts,tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss}\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "ts-node prisma/seed.ts",
    "db:setup": "npm run prisma:generate && npm run prisma:migrate && npm run prisma:seed",
    "web": "concurrently \"npm run vite-dev\" \"npm run server-dev\"",
    "vite-dev": "vite --port 5173 --host",
    "server-dev": "node server.js",
    "debug": "tsc -p tsconfig.electron.json && NODE_ENV=development node --experimental-modules --experimental-specifier-resolution=node dist/server/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/mcp-registry.git"
  },
  "keywords": [
    "mcp",
    "registry",
    "electron",
    "react",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.11.16",
    "@mui/material": "^5.13.0",
    "@octokit/rest": "^21.1.1",
    "@prisma/client": "^4.14.0",
    "@types/cors": "^2.8.17",
    "axios": "^1.4.0",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "electron-is-dev": "^2.0.0",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/electron": "^1.6.10",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.1.3",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.1",
    "electron": "^24.3.0",
    "electron-builder": "^23.6.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "prettier": "^2.8.8",
    "prisma": "^4.14.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vite": "^4.3.5"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
